<Page x:Class="DataGrid.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DataGrid"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ListView Grid.Column="1" Name="ListView"/>

        <Button VerticalAlignment="Center" HorizontalAlignment="Center" Content="Заполнить" Width="140" Height="35" FontSize="20" Click="Button_Click"/>
        <Button VerticalAlignment="Center" HorizontalAlignment="Center" Content="Назад" Width="140" Height="35" FontSize="20"
                Margin="0, 100, 0, 0"/>
    </Grid>
</Page>
